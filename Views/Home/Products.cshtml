        <head>
            <style>
                .category-badge {
                    position: absolute;
                    top: 10px;
                    right: 10px;
                    z-index: 10;
                }

                .card img {
                    display: block;
                    width: 100%;
                    height: auto;
                }

                .card .blog-entry-contents {
                    padding: 15px;
                }
            </style>

        </head>
        <section class="section-sm">
            <div class="container">
                <h2 class="h2 section-title text-center" style="color:#000; font-size: 2.5rem; text-decoration: underline; text-decoration-color: darkgreen; margin-top: 2rem; margin-bottom: 2rem;">
                    Products
                </h2>
                <div class="row">
                    <div class="col-md-12">
                        <!-- Adjusted column width to occupy all available space -->
                        @using (Html.BeginForm(Html.BeginForm("Products", "Home", FormMethod.Post, null)))
                        {
                            <div class="form-row align-items-end">
                                <div class="form-group col-md-5">
                                    <label for="price" style="color: #333;">Price:</label>
                                    @Html.DropDownList("price", new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "All", Value = "All" },
                                        new SelectListItem { Text = "Under $50", Value = "Under 50" },
                                        new SelectListItem { Text = "$50 - $100", Value = "50-100" },
                                        new SelectListItem { Text = "Over $100", Value = "Over 100" }
                                    }, "All", new { @class = "form-control" })
                                </div>
                                <div class="form-group col-md-5">
                                    <label for="category" style="color: #333;">Category:</label>
                                    @Html.DropDownList("category", new List<SelectListItem>
                                    {
                                        new SelectListItem { Value = "Pesticide", Text = "Pesticide" },
                                   new SelectListItem { Value = "Cattle Feed", Text = "Cattle Feed" },
                                   new SelectListItem { Value = "Fertilizers", Text = "Fertilizers" },
                                   new SelectListItem { Value = "Seeds", Text = "Seeds" },
                                    }, "All", new { @class = "form-control" })
                                </div>
                                <div class="form-group col-md-auto">
                                    <!-- Adjusted column width to auto to take minimum space -->
                                    <label class="invisible">Filter</label> <!-- Placeholder label for alignment -->
                                    <input type="submit" value="Search" class="btn btn-success btn-block" style="margin-top: 32px;">
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="card border-0 rounded-0 shadow-none overflow-hidden custom">
                                <a href="/Home/ProductDetails?id=@item.PId" class="position-relative">
                                    <span class="badge badge-primary category-badge">@item.Category</span>
                                    <img src="@item.Pimage" alt="Image" class="img-fluid">

                                    <div class="blog-entry-contents">
                                        <h3><a href="#">@Html.DisplayFor(modelItem => item.PName)</a></h3>
                                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                        <p class="pro-price"><b>Price: </b>$@item.Price</p>
                                        <div class="meta">Posted by <a href="#">@Html.DisplayFor(modelItem => item.UserName)</a></div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>


        <div class="py-5 bg-primary block-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h3 class="text-white">Subscribe To Newsletter</h3>
                        <p class="opacity-50">Lorem ipsum dolor sit amet consectetur adipisicing elit. Nesciunt, reprehenderit!</p>
                    </div>
                    <div class="col-lg-6">
                        <form action="#" class="form-subscribe d-flex align-items-stretch">
                            <input type="email" class="form-control h-100" placeholder="Enter your e-mail">
                            <input type="submit" class="btn btn-secondary px-4" value="Subcribe">
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer">
            <div class="container">
