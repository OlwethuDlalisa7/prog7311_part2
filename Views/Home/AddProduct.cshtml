        <div class="intro-section site-blocks-cover innerpage" style="background-image: url('/images/hero_6.jpg');">
            <div class="container">
                <div class="row align-items-center text-center">
                    <div class="col-lg-12 mt-5" data-aos="fade-up">
                        <h1>Add New Product</h1>
                        @*<p class="text-white text-center">
                                <a href="index.html">Home</a>
                                <span class="mx-2">/</span>
                                <span>Login</span>
                            </p>*@
                    </div>
                </div>
            </div>
        </div>

        <section class="login py-5 border-top-1">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-8 align-item-center">
                        <div class="border">
                            <h3 class="bg-gray p-4" style="background-color: #116530; color: white">Add New Product</h3>
                            @using (Html.BeginForm("AddProduct", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-12 text-center">
                                            <div class="image-upload-container">
                                                <!-- Ensure the 'name' attribute is set for model binding -->
                                                <img width="120" height="120" id="profileImage" src="~/images/default_product.jpg" alt="Profile Image" class="profile-image" onclick="document.getElementById('imgFile').click();" />
                                                <input id="imgFile" name="imgFile" type="file" style="display: none;" onchange="displayImage(this);" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <!-- Adjusted column class -->
                                            @Html.EditorFor(model => model.pname, new { htmlAttributes = new { @class = "form-control", placeholder = @Html.DisplayName("Product Name") } })
                                            @Html.ValidationMessageFor(model => model.pname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <!-- Adjusted column class -->
                                            @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control", placeholder = @Html.DisplayName("Price") } })
                                            @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <!-- Adjusted column class -->
                                            @Html.DropDownListFor(model => model.category, categoriesList, new { @class = "form-control", @placeholder = @Html.DisplayName("Choose Category") })
                                            @Html.ValidationMessageFor(model => model.category, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(model => model.production_date, new { @class = "form-control", @placeholder = @Html.DisplayName("YYYY-MM-DD 12:00:00") })
                                            @Html.ValidationMessageFor(model => model.production_date, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = "4", placeholder = @Html.DisplayName("Product Description") })
                                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <p style="color:red; margin-top:10; margin-bottom:10;"><b>@ViewBag.Message</b></p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input style="background-color:#116530; align-content:center;color:white" type="submit" value="Add" class="btn btn-default" />
                                            @*<a class="mt-3 d-inline-block text-primary" href="/Home/Join">Register Now</a>*@
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>



        <div class="py-5 bg-primary block-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h3 class="text-white">Subscribe To Newsletter</h3>
                        <p class="opacity-50">Lorem ipsum dolor sit amet consectetur adipisicing elit. Nesciunt, reprehenderit!</p>
                    </div>
                    <div class="col-lg-6">
                        <form action="#" class="form-subscribe d-flex align-items-stretch">
                            <input type="email" class="form-control h-100" placeholder="Enter your e-mail">
                            <input type="submit" class="btn btn-secondary px-4" value="Subcribe">
                        </form>
                    </div>
                </div>
            </div>
        </div>

